<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#121212"
    android:layout_height="match_parent"
    tools:context=".ui.GuideFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

       <TextView
           android:id="@+id/s1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="15dp"
           android:fontFamily="@font/arvo"
           android:text="Step 1.  Select Your Respective Box"
           android:textColor="#FFFFFF"
           android:textSize="18dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"></TextView>


       <ImageView

           android:id="@+id/g1"
           android:layout_width="match_parent"
           android:layout_height="250dp"
           android:layout_marginTop="20dp"
           android:src="@drawable/guide1"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/s1"
           ></ImageView>


      <TextView
          android:id="@+id/s2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="15dp"
          android:fontFamily="@font/arvo"
          android:text="Step 2.  Fill The Required Data"
          android:textColor="#FFFFFF"
          android:textSize="18dp"
          app:layout_constraintStart_toStartOf="parent"

         app:layout_constraintTop_toBottomOf="@id/g1"></TextView>
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="330dp"
           android:src="@drawable/guide2"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_marginTop="20dp"
           android:id="@+id/g2"
           app:layout_constraintTop_toBottomOf="@id/s2"/>
       <TextView
           android:id="@+id/s3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="15dp"
           android:fontFamily="@font/arvo"
           android:text="Step 3.  Save The Data"
           android:textColor="#FFFFFF"
           android:textSize="18dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/g2"></TextView>

       <TextView
           android:id="@+id/s4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="20dp"
           android:fontFamily="@font/arvo"
           android:text="Step 4.  Connect To EMB Device"
           android:textColor="#FFFFFF"
           android:textSize="18dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/s3"></TextView>
       <TextView
           android:id="@+id/s5"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="20dp"
           android:fontFamily="@font/arvo"
           android:text="Step 5.  Share The Data"
           android:textColor="#FFFFFF"
           android:textSize="18dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/s4"></TextView>

   </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>