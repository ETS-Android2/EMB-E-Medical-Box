<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".ui.gallery.GalleryFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/arvo"
        android:text=" Any Suggestions "
        android:id="@+id/as"
        android:textColor="#FFFFFF"
        android:background="@drawable/layout"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Need Improvement"
        android:id="@+id/ni"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/as"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/arvo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/as"
        android:layout_marginTop="32dp"
        android:id="@+id/ri1"
        android:background="@drawable/right"
        app:layout_constraintRight_toLeftOf="@id/ni"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Can't Connect To Device"
        android:id="@+id/ncon"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/ni"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/arvo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/ri1"
        android:layout_marginTop="22dp"
        android:id="@+id/ri2"
        android:background="@drawable/right"
        app:layout_constraintRight_toLeftOf="@id/ncon"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/lio"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ncon"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#121212"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="350dp"
            android:layout_height="350dp"
            app:lottie_rawRes="@raw/mail3"
            app:lottie_autoPlay="true"
            android:id="@+id/mailani"
            app:lottie_loop="true"
            android:layout_marginRight="20dp"
            />



    </RelativeLayout>






</androidx.constraintlayout.widget.ConstraintLayout>