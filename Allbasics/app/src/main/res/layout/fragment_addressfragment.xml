<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".Addressfragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter MAC Address of EMB Device"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:fontFamily="@font/arvo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/mac"></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColorHint="#282727"
        android:fontFamily="@font/arvo"
        android:layout_marginTop="30dp"

        android:textSize="20dp"
        android:textColor="#F2385F"
        android:textAlignment="center"
        android:background="@drawable/border"
        android:id="@+id/macaddress"
        android:hint="11:22:33:44:55:66"
        app:layout_constraintTop_toBottomOf="@id/mac"
        android:gravity="center_horizontal"></EditText>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC Address Is Provided On Your EMB Device "
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#F2385F"
        android:textSize="12dp"
        android:id="@+id/text1"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="20dp"
       app:layout_constraintTop_toBottomOf="@id/macaddress"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC Address Must Be In 22:22:33:44:55 Format. "
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#F2385F"
        android:textSize="12dp"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/text1"
        ></TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/strokebutton"
        android:text="Skip"
        android:textColor="#F2385F"
        android:fontFamily="@font/mm"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:id="@+id/skipadd"
        android:layout_marginLeft="30dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button"
        android:text="Done"
        android:textColor="#FFFFFF"
        android:id="@+id/btnadd"/>




</androidx.constraintlayout.widget.ConstraintLayout>